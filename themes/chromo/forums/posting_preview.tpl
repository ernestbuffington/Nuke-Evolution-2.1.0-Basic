<table class="forumline" width="100%" cellspacing="1" cellpadding="4" >
    <tr>
        <th height="25" class="thHead">{L_PREVIEW}</th>
    </tr>
    <tr>
        <td class="row1">
            <img src="{MINIPOST_IMG}" alt="{L_POST}" />
            <span class="postdetails">
                {L_POSTED}:&nbsp;{POST_DATE}&nbsp;&nbsp;&nbsp;{L_POST_SUBJECT}:&nbsp;{POST_SUBJECT}
            </span>
        </td>
    </tr>
    <tr>
        <td class="row1">
            <table width="100%"  cellspacing="0" cellpadding="0">
                <tr>
                    <td>
                        <div class="postbody">
                            {MESSAGE}
                        </div>
<!-- BEGIN postrow -->
                        {ATTACHMENTS}
<!-- END postrow -->
                    </td>
                </tr>
            </table>
        </td>
    </tr>
    <tr>
        <td class="spaceRow" height="1">
            <img src="{SPACER_IMG}" alt="" width="1" height="1" />
        </td>
    </tr>
</table>

<div style="clear:both;"></div>